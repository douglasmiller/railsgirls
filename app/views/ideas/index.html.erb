<h1>Listing ideas</h1>

<table class="ideas table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr class="ideas-idea">
        <td><%= link_to idea.name, idea %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag(idea.picture_url, :width => 600) if idea.picture.present? %></td>
        <td class='ideas-idea-controls text-right'>
          <%= link_to 'Show', idea, class: "btn btn-default btn-xs" %>
          <%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-default btn-xs" %>
          <%= link_to 'Destroy', idea, class: "btn btn-default btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path, { class: "btn btn-primary" } %>
